<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="screens.CoursesController">
   <top>
      <Label alignment="CENTER" text="Course Registration System-Courses" BorderPane.alignment="CENTER">
         <font>
            <Font size="22.0" />
         </font>
      </Label>
   </top>
   <center>
      <TableView fx:id="courseTable" prefHeight="200.0" prefWidth="500.0" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="idCol" prefWidth="75.0" text="ID" />
          <TableColumn fx:id="nameCol" prefWidth="75.0" text="Name" />
            <TableColumn fx:id="creditsCol" prefWidth="75.0" text="Credits" />
            <TableColumn fx:id="dayCol" prefWidth="75.0" text="Days" />
            <TableColumn fx:id="timeCol" prefWidth="75.0" text="Time" />
            <TableColumn fx:id="roomCol" prefWidth="75.0" text="Rooms" />
        </columns>
      </TableView>
   </center>
   <right>
      <VBox prefWidth="240.0" spacing="8.0" BorderPane.alignment="TOP_LEFT">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
            <Label text="ID" />
            <TextField fx:id="courseIdField" />
            <Label text="Name" />
            <TextField fx:id="courseNameField" />
            <Label text="Credits" />
            <TextField fx:id="creditsField" />
            <Label text="Day" />
            <TextField fx:id="dayField" />
            <Label text="Time" />
            <TextField fx:id="timeField" />
            <Label text="Room" />
            <TextField fx:id="roomField" />
         </children>
      </VBox>
   </right>
   <bottom>
      <HBox spacing="10.0" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="10.0" left="15.0" right="15.0" />
         </BorderPane.margin>
         <children>
            <Button fx:id="addCourseButton" mnemonicParsing="false" onAction="#onAddCourseClicked" text="Add Course" HBox.hgrow="ALWAYS" />
            <Button fx:id="updateCourseButton" mnemonicParsing="false" onAction="#onUpdateCourseClicked" text="Update Course" HBox.hgrow="ALWAYS" />
            <Button fx:id="deleteCourseButton" mnemonicParsing="false" onAction="#onDeleteCourseClicked" text="Delete Course" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
   </bottom>
</BorderPane>
