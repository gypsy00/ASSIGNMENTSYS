<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="screens.ResultController">
   <top>
      <Label alignment="CENTER" text="Course Registration System-RESULTS" BorderPane.alignment="CENTER">
         <font>
            <Font size="22.0" />
         </font>
      </Label>
   </top>
   <center>
      <VBox spacing="10.0" BorderPane.alignment="TOP_LEFT">
         <children>
            <TextField fx:id="searchField" maxWidth="1.7976931348623157E308" prefWidth="200.0" promptText="SEARCH BY NAME OR ID" />
            <TableView fx:id="courseTable" prefHeight="200.0" prefWidth="500.0">
              <columns>
                <TableColumn fx:id="studentIdCol" prefWidth="75.0" text="Student ID" />
                <TableColumn fx:id="studentNameCol" prefWidth="75.0" text="Student Name" />
                  <TableColumn fx:id="courseIdCol" prefWidth="75.0" text="Course ID" />
                  <TableColumn fx:id="courseNameCol" prefWidth="75.0" text=" Course Name" />
                  <TableColumn fx:id="gradeCol" prefWidth="75.0" text="Grade" />
              </columns>
            </TableView>
            <Button mnemonicParsing="false" onAction="#handleGoToEnrollments" text="Go To Enrollments" />
            <Button mnemonicParsing="false" onAction="#handleGoToStudents" text="Go To Students" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </center>
   <right>
      <VBox prefWidth="240.0" spacing="8.0" BorderPane.alignment="TOP_LEFT">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
            <Label text="Student ID" />
            <TextField fx:id="studentIdField" />
            <Label text="Student Name" />
            <TextField fx:id="studentNameField" />
            <Label text="Course ID" />
             <TextField fx:id="courseIdField" promptText="Course ID" />
            <Label  text="Course Name" />
             <TextField fx:id="courseNameField" promptText="Course Name" editable="false" />
            <Label  text="Grade" />
            <TextField fx:id="gradeField" />
         </children>
      </VBox>
   </right>
   <bottom>
      <HBox spacing="10.0" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="10.0" left="15.0" right="15.0" />
         </BorderPane.margin>
         <children>
            <Button fx:id="addGradeButton" mnemonicParsing="false" onAction="#onAddGradeClicked" text="Add Grade" HBox.hgrow="ALWAYS" />
            <Button fx:id="updateGradeButton" mnemonicParsing="false" onAction="#onUpdateGradeClicked" text="Update Grade" HBox.hgrow="ALWAYS" />
            <Button fx:id="deleteGradeButton" mnemonicParsing="false" onAction="#onDeleteGradeClicked" text="Delete Grade" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
   </bottom>
