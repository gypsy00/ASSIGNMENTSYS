         <BorderPane.margin>
            <Insets bottom="10.0" left="15.0" right="15.0" />
         </BorderPane.margin>
         <children>
            <Button fx:id="addEnrollmentButton" mnemonicParsing="false" onAction="#onAddEnrollmentClicked" text="Add Enrollment" HBox.hgrow="ALWAYS" />
            <Button fx:id="updateEnrollmentButton" mnemonicParsing="false" onAction="#onUpdateEnrollmentClicked" text="Update Enrollment" HBox.hgrow="ALWAYS" />
